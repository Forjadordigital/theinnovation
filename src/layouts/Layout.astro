---
// Supports weights 300-800
import '@fontsource-variable/open-sans';
import Header from '../components/Header.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate="none">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="R&D Innovation" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
	</head>
	<Header />
	<body>
		<slot />
		
		<script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.5.1/dist/flowbite.min.js"></script>
	</body>
</html>
<style is:global>
	:root {
		
	}

	@font-face {
		font-family: 'pepsiCompress';
		src: url('/fonts/pepsiCompress.ttf') format('truetype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'pepsiExtended';
		src: url('/fonts/pepsiExtended.ttf') format('truetype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'nightInline';
		src: url('/fonts/NightLightInline.otf') format('opentype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: 'nightSquare';
		src: url('/fonts/NightLightSquare.otf') format('opentype');
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}


	html {
		font-family: 'Open Sans Variable', sans-serif, system-ui, sans-serif;
		background-image: linear-gradient(to top, #231f20, #1f1b1c, #1a1818, #161414, #110f0f);
	}

	body{
		background-image: linear-gradient(to top, #231f20, #1f1b1c, #1a1818, #161414, #110f0f);
		background-size: cover;
		background-position: center;
		min-height: 100vh;
	}

	.font-pepsi-compress{
		font-family: 'pepsiCompress', 'Open Sans Variable', sans-serif, system-ui, sans-serif;
	}

	.font-pepsi-extended{
		font-family: 'pepsiExtended', 'Open Sans Variable', sans-serif, system-ui, sans-serif;
	}

	.font-neon-uno{
		font-family: 'nightInline', 'Open Sans Variable', sans-serif, system-ui, sans-serif;
	}

	.font-neon-dos{
		font-family: 'nightSquare', 'Open Sans Variable', sans-serif, system-ui, sans-serif;
	}

	
</style>
