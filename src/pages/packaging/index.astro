<style>
	
.neon-verde {
  text-shadow: 0px 0px 50px rgba(0, 255, 0, 0.8); 
  animation: pulso 2s infinite alternate;
}

.neon-naranja {
  text-shadow: 0px 0px 30px #ff9100cf; 
  animation: pulso-naranja 2s infinite alternate;
}

.er-fondo{
    background-image: url('https://media3.giphy.com/media/v1.Y2lkPTc5MGI3NjExN2FheDA3ZWxwMHVod25vbzBjOXE4cDVrcXd3NGV3cTNxYjFlcGowMiZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/3otO6NFBIAFg2vPZuM/giphy.webp');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

.er-fondo-naranja{
    background-image: url('https://media1.giphy.com/media/v1.Y2lkPTc5MGI3NjExempvdnFvNHkxNzhwNXJwOTVyaDBmMmQ5d25sZGs3NjllNWh2NjdkZCZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/APel4rVH09pmxIZcZN/giphy.webp');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

@keyframes pulso-naranja {
  from {
    text-shadow: 0px 0px 10px #ff9100;
  }
  to {
    text-shadow: 0px 0px 30px #ff9100;
  }
}
@keyframes pulso {
  from {
    text-shadow: 0px 0px 20px rgba(0, 255, 0, 0.8);
  }
  to {
    text-shadow: 0px 0px 50px rgba(0, 255, 0, 0.8);
  }
}

</style>