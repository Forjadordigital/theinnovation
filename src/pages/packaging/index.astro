---
import Layout from '../../layouts/Layout.astro';
import GatoradeLogo from '../../icons/GatoradeLogo.astro'

---

<Layout title="Welcome to Astro.">
	<main class="w-full min-h-screen grid grid-cols-1 justify-items-center">

    <!-- hero -->
		<section>
      <h1 class="text-transparent p-4 text-5xl bg-clip-text font-black bg-gradient-to-r er-fondo neon-verde font-pepsi-extended">Packaging</h1>
    </section>

    <!-- Expanding Gatoradr -->
    <section class="w-4/5">
      <div class="flex items-center justify-between">
        <img src="/images/packs/gatorade-neon-logo.svg" alt="Logo Gatorade Neon" class="h-20">
        <h2 class="text-transparent p-4 text-2xl bg-clip-text bg-gradient-to-r font-neon-uno er-fondo-naranja neon-naranja">
          Expanding Gatorlit Beyond México
        </h2>
      </div>
    </section>

    <!-- RRB 1.5L Guatemala -->
    <section>
      
    </section>

